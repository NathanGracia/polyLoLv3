# Polymarket API Configuration
# Copy this file to .env and fill with your keys

# Your Polygon private key (format: 0x...)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Your funder address (Polygon wallet)
FUNDER_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# Signature type (1 = EOA, 2 = POLY_GNOSIS_SAFE, 3 = POLY_PROXY)
SIGNATURE_TYPE=1

# Chain ID (137 = Polygon mainnet, 80001 = Mumbai testnet)
CHAIN_ID=137

# API Credentials (generated automatically by the bot)
API_KEY=""
API_SECRET=""
API_PASSPHRASE=""

# Proxy Configuration (optional)
PROXY_HTTP=http://your-vps-ip:8888
PROXY_HTTPS=http://your-vps-ip:8888

# Web Authentication (for web_app.py)
WEB_USERNAME=admin
WEB_PASSWORD=changeme
SECRET_KEY=change-this-to-random-secret-key-in-production
